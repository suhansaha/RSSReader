<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL :"
        android:id="@+id/urlLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/url"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/urlLabel"
        android:layout_toRightOf="@id/urlLabel"
        android:text="http://feeds.bbci.co.uk/news/world/europe/rss.xml"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/button"
        android:onClick="fetchFeed"
        android:layout_alignBottom="@id/url"
        android:layout_toEndOf="@id/url"
        android:layout_toRightOf="@id/url"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/FeedList"
        android:layout_below="@id/url">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
